!!! 5
%html
%head
  %title W9Wiki
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
%body
  %nav.navbar.navbar-default.navbar-fixed-top
    .container
      =link_to "Wiki", root_path, class: "navbar-brand"
      %ul.nav.navbar.navbar-right
        -if user_signed_in?
          %li.navbar-link=link_to "New Article", new_article_path
  %p.notice= notice
  %p.alert= alert
  .container
    .row
      .col-md-8
        = yield
      .col-md-4
        %ul
          %li=link_to "All Article", root_path, class: "list-group-item"
          -Category.all.each do |category|
            %li=link_to category.name, articles_path(category: category.name), class: "list-group-item"
